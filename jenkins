pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout code from Git
                    checkout([$class: 'GitSCM',
                              branches: [[name: 'main']],
                              userRemoteConfigs: [[url: 'https://github.com/surya-devopsaws/qtree.git']]]
                    )
                }
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your application using sshPublisher
                sshPublisher(publishers: [sshPublisherDesc(
                    configName: 'demo',
                    transfers: [sshTransfer(
                        cleanRemote: false,
                        excludes: '',
                        execCommand: '''echo "Deployment script running"''', // Replace with actual deploy command
                        flatten: false,
                        makeEmptyDirs: false,
                        noDefaultExcludes: false,
                        patternSeparator: '[, ]+',
                        remoteDirectory: '/', // Specify the correct remote directory
                        remoteDirectorySDF: false,
                        removePrefix: '',
                        sourceFiles: '*/**'
                    )],
                    usePromotionTimestamp: false,
                    useWorkspaceInPromotion: false,
                    verbose: false
                )])
            }
        }
    }
}
